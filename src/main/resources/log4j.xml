<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">


	<!-- ********** APPENDER OK********** -->
	<appender name="lifelog.appender" class="org.apache.log4j.FileAppender">
		<param name="File" value="/home/pi/lilo.log" />
<!-- 		<param name="File" value="/home/costanza/pi/lilo.log" /> -->
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="#%d{dd-MMM-yy HH.mm.ss:SSS} - %p - %C.%M - %m%n" />
		</layout>
	</appender>

	<appender name="lifelogConsole.appender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="#%d{dd-MMM-yy HH.mm.ss:SSS} - %p - %C.%M - %m%n" />
		</layout>
	</appender>


	<logger name="lifelogLogger" additivity="false">
		<level value="debug" />
		<appender-ref ref="lifelog.appender" />
		<appender-ref ref="lifelogConsole.appender" />
	</logger>

	<!-- Per loggare le query sql di una specifico namespace per loggare tutti i namespace fermarsi a ..mybatis.mappers.
	<logger
		name="it.costanza.LiLo.mybatis.mappers.ModuleDayHostMapper"
		additivity="false">
		<level value="trace" />
		<appender-ref ref="lifelog.appender" />
		<appender-ref ref="lifelogConsole.appender" />
	</logger>
 -->
	<!-- -->
	<root>
		<priority value="error" />
		<appender-ref ref="lifelog.appender" />
		<appender-ref ref="lifelogConsole.appender" />
	</root>


</log4j:configuration>