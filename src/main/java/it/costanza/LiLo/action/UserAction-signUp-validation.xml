<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="user.name">
		<field-validator type="requiredstring">
			<message>You must enter a name</message>
		</field-validator>
	</field>
	<field name="user.surname">
		<field-validator type="requiredstring">
			<message>You must enter a surname</message>
		</field-validator>
	</field>
	<field name="user.email">
		<field-validator type="requiredstring">
			<message>You must enter a email</message>
		</field-validator>
	</field>
	<field name="user.birthDate">
		<field-validator type="requiredstring">
			<message>You must enter a birthdate</message>
		</field-validator>
		<field-validator type="date">
			<param name="min">01/01/1950</param>
			<param name="max">01/01/2005</param>
			<message>Birth date must be in correct format and between 1930 and
				2005</message>
		</field-validator>
	</field>
	<field name="user.username">
		<field-validator type="requiredstring">
			<message>You must enter a username</message>
		</field-validator>
	</field>
	<field name="user.password">
		<field-validator type="requiredstring">
			<message>You must enter a password</message>
		</field-validator>
	</field>
</validators>